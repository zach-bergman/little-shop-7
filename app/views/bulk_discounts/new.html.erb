<%= render "shared/merchant_navbar" %>

<div class="container">
  <div class="form-container">
    <h2>Create a New Bulk Discount</h2>
    <%= form_with url: merchant_bulk_discounts_path(@merchant.id), data: { turbo: false } do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name:" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :percentage, "Percentage Discount:" %>
        <%= f.number_field :percentage, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :quantity_threshold, "Quantity Threshold:" %>
        <%= f.number_field :quantity_threshold, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit", class: "btn" %>
      </div>
    <% end %>
  </div>
</div>